#ifndef OBJECT_H_
#define OBJECT_H_

#include <enki/PhysicalEngine.h>
#include <enki/robots/e-puck/EPuck.h>

#include <vector>

class Puck
{
public:
	Puck(const double& InitialXCoordinate, const double& InitialYCoordinate, Enki::World& World);

	virtual const double& GetRadius() const;
	virtual const double& GetXCoordinate() const;
	virtual const double& GetYCoordinate() const;
	virtual const double& GetAngle() const;
	virtual const int& GetColor() const;

private:
	Enki::PhysicalObject * m_EnkiPhysicalObject;

	double m_Radius;
	int m_Color;
};



#endif /* OBJECT_H_ */
