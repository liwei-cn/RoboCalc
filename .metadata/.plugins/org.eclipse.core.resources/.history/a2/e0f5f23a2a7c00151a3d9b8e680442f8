#ifndef AGENT_H_
#define AGENT_H_
#include <enki/PhysicalEngine.h>
#include <enki/robots/e-puck/EPuck.h>

class Agent : public ObjectInterface
{
public:
	Agent();
	unsigned GetSensorReading();
	void SetSensorReading(unsigned sensorReading);

	virtual const double& GetXCoordinate() const;
	virtual const double& GetYCoordinate() const;
	virtual const double& GetAngle() const;
	virtual const double& GetRadius() const;
	virtual const int& GetColor() const;

	void SetXCoordinate(double XCoordinate);
	void SetYCoordinate(double YCoordinate);
	void SetAngle(double Angle);
	void SetLeftSpeed(double leftSpeed);
	void SetRightSpeed(double rightSpeed);

	Enki::EPuck* GetEpuckPointer();
private:
	unsigned SensorReading;
	Enki::EPuck* m_EnkiEpuck;
};

#endif /* AGENT_H_ */
